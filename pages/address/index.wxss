picker {
  display:inline-block;
  width:33.3%;
  text-align:left;
  height: 60rpx;
}
.form-list {
    position: relative;
    margin-bottom: 27rpx;
    width: 100%;
}

.form-list:first-child {
    margin-top: 20rpx;
}

.form-list::before, .form-list::after {
    content: '';
    display: block;
    position: absolute;
    left: 0;
    height: 1px;
    width: 100%;
    transform: scaleY(.5);
    background-color: #e3e3e3;
}

.form-list::before {
    top: 0;
}

.form-list::after {
    bottom: 0;
}

.form-item {
    position: relative;
    box-sizing: border-box;
    display: flex;
    width: 100%;
    padding: 15rpx 0;
    background-color: #fff;
    padding-left: 27rpx;
}

.form-item::before {
    content: '';
    display: block;
    position: absolute;
    z-index: 99;
    left: 0;
    top: 0;
    height: 1px;
    width: 100%;
    transform: scaleY(.5);
    background-color: #e3e3e3;
}

.form-item-hd {
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    padding-left: 6rpx;
}

.form-item-bd {
    flex: 1;
    height: 60rpx;
    position:absolute;
    left:190rpx;
    right:27rpx;
}

input, .input {
    box-sizing: border-box;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #fff;
    padding: 0;
    font-size: 30rpx;
    width: 100%;
}

switch {
    position: absolute;
    right: 40rpx;
    top: 50%;
    margin-right: -10rpx;
    margin-top: -16px;
    transform: scale(0.9);
    transform-origin: right center;
}

.input-placeholder {
    color: #ccc;
}
.save-btn {
    width: 90%;
    height: 80rpx;
    margin: 0 auto;
    font-size: 32rpx;
    text-align: center;
    line-height: 80rpx;
    background-color: #ffa500;
    border-radius: 6rpx;
    color: #fff;
}

.save-btn:active {
    background-color: #FF1010;
}
button::after {
  border: 0;
}
.delete-btn,.cancle-btn {
  border: 1px solid #e0e0e0;
  width: 90%;
  height: 80rpx;
  margin: 0 auto;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #FFFFFF;
  border-radius: 6rpx;
  color: #000000;
  margin-top: 20rpx;
}
.hidden {
    opacity: 0;
}
.message {
    position: fixed;
    top: 80%;
    left: 50%;
    width: 360rpx;
    height: 66rpx;
    margin-left: -200rpx;
    background-color: rgba(0, 0, 0, .6);
    border-radius: 15px;
    text-align: center;
    line-height: 66rpx;
    color: #fff;
    opacity: 0;
    font-size: 32rpx;
}

.fade-in {
    animation: fadeIn .3s forwards;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0);
  }

  to {
    opacity: 1;
    -webkit-transform: none;
    transform: none;
  }
}
picker .input {
  color: #000000;
  overflow: hidden;
}