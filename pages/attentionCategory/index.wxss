/* 我的关注 */
.attention-wrapper {
  padding: 0 20rpx;
}
.attention-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 24rpx auto;
}
.attention-header>text:nth-of-type(1) {
  font-size: 32rpx;
  color: #555;
}
.attention-header>text:nth-of-type(2) {
  display: inline-block;
  font-size: 24rpx;
  padding: 6rpx 29rpx;
  border-radius: 25rpx;
  color: #555;
  border: 1rpx solid #ccc;
}
.attention-header>text.active:nth-of-type(2) {
  color: #b22;
  border: 1rpx solid #b22;
}
.attention-item {
  position: relative;
  display: inline-block;
  background-color: #efeff4;
  padding: 8rpx 24rpx 10rpx 24rpx;
  margin-right: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 10rpx;
}
.attention-cancle {
  position: absolute;
  right: -16rpx;
  top: -16rpx;
}
.attention-item>text {
  font-size: 25rpx;
  color: #555;
}
/* 所有类别 */
.list-wrapper {
  padding: 0 20rpx 0 0;
}
.list-header {
  margin: 20rpx;
}
.list-header>text:nth-of-type(1) {
  font-size: 32rpx;
  color: #555;
}
.list-header>text:nth-of-type(2) {
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
}
.list-item {
  display: inline-block;
  background-color: #fff;
  padding: 5rpx 20rpx 10rpx 20rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 14rpx rgba(0,0,0,.2);
  -webkit-box-shadow: 0 0 14rpx rgba(0,0,0,.2);
}
.hover-list-item {
  background-color: #efeff4;
}
.list-item>text {
  font-size: 25rpx;
  color: #555;
}
.list-item.active>text {
  color: #fff;
}
/*  */
.category-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.category-btn>text {
  font-size: 32rpx;
  color: #fff;
}
.category-btn.iphonex {
  height: 120rpx;

}
.category-btn.iphonex>text {
  margin-bottom: 30rpx;
}