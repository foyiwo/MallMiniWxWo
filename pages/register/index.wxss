.invitationCode-tip {
  position:absolute;
  right:24rpx;
  width:80rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  height:60rpx;
}
.invitationCode-tip>image {
  width: 50rpx;
  height: 50rpx;
