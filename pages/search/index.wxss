/**index.wxss**/
page {
  background-color: #f7f7f7;
}
/* 头部 */
.search-header {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  height: 120rpx;
  width: 100%;
}
.input-container {
  position: relative;
  width: 76%;
  height: 70rpx;
  margin: 25rpx auto;
  background-color: #fff;
  border-radius: 50rpx;
  overflow: hidden;
}
.input-container>input {
  width: auto;
  height: 100%;
  font-size: 32rpx;
  padding: 0 80rpx 0 20rpx;
}
.input-container>icon {
  position: absolute;
  right: 0;
  top: 0;
  height: 70rpx;
  width: 80rpx;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 热门搜索 */
.search-hot-warpper {
  padding: 0 20rpx;
}
.hot-title {
  margin-bottom: 20rpx;
}
.hot-title>text {
  font-size: 32rpx;
  font-weight: 400;
}
.hot-item {
  display: inline-block;
  background-color: #fff;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  padding: 0 24rpx;
  padding-bottom: 8rpx;
  border-radius: 8rpx;
}
.hot-item>text {
  color: #555;
  font-size: 27rpx;
}