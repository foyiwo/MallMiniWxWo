/**index.wxss**/
.allOrder-container {
  border-top: 1rpx solid #ccc;
}
.allOrder-item {
  display: flex;
  align-items: center;
  height: 200rpx;
  width: 100%;
  border-bottom: 1rpx solid #ccc;
}
.item-left {
  width: 240rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item-left>image {
  width: 160rpx;
  height: 160rpx;
}
.item-right {
  height: 200rpx;
  flex: 1;
  position: relative;
  overflow: hidden;
}
.order-no {
  line-height: 32rpx;
  margin-top: 24rpx;
  width: 90%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.order-no>text {
  font-size: 30rpx;
  width: 100%;
}
.order-state {
  line-height: 32rpx;
}
.order-state>text {
  color: #999;
  font-size: 24rpx;
}
.order-price {
  line-height: 36rpx;
}
.order-price>text {
  color: #999;
  font-size: 24rpx;
}
.order-time {
  line-height: 36rpx;
}
.order-time>text {
  color: #999;
  font-size: 24rpx;
}
.item-right>image {
  position: absolute;
  right: 12rpx;
  top: 82rpx;
  z-index: 1;
  width: 36rpx;
  height: 36rpx;
}
.foot-tip {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.foot-tip>image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}
.foot-tip>text {
  display: inline-block;
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #555;
}
/* 空订单 */
.empty-order {
  border-top: 1rpx solid #ccc;
  padding-top: 16px;
  width: 100%;
  text-align: center;
}
.empty-order>text {
  font-size: 32rpx;
  color: #555;
}