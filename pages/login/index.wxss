/**index.wxss**/
/* 背景 */
.login-container {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 11;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0,0,0,.2);
}
.login-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.login-bg>image {
  width: 100%;
  height: 100%;
}
/* 登录内容 */
.login-wrapper {
  position: absolute;
  top: 10%;
  left: 2%;
  right: 2%;
  z-index: 10;
  border-radius: 2px;
}
.header-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  border: 1rpx solid rgba(255, 255, 255, .1);
  margin: 80rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, .1);
}
.header-image-wrapper {
  width: 180rpx;
  height: 180rpx;
  border-radius: 100%;
  border: 5px solid rgba(255, 255, 255, .1);
  overflow: hidden;
}
.header-image-wrapper>image {
  width: 180rpx;
  height: 180rpx;
}
/* 输入框 */
.input-wrapper {
  width: 100%;
}
.input-account,.input-pwd {
  width: 80%;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50rpx;
  background-color: rgba(255, 255, 255, .2);
  overflow: hidden;
  margin: 42rpx auto 0;
}
.input-account {
  margin-top: 60rpx;
}
.input-account>input,.input-pwd>input {
  width: auto;
  height: 76rpx;
  color: #fff;
  padding: 0 28rpx;
}
.placeholder-input {
  font-weight: lighter;
  color: rgba(255, 255, 255, .8);
  font-size: 32rpx;
}
.input-pwd-handle {
  width: 80%;
  margin: 0 auto;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.input-remember {
  margin-left: 6rpx;
}
.input-remember>image {
  width: 32rpx;
  height: 32rpx;
}
.input-remember>text {
  font-size: 27rpx;
  color: rgba(255, 255, 255, .8);
  vertical-align: 8rpx;
  text-decoration: underline;
}
.input-forget>text {
  font-size: 27rpx;
  color: rgba(255, 255, 255, .8);
  vertical-align: 8rpx;
  text-decoration: underline;
}
.login-btn{
  width: 80%;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50rpx;
  border: 0;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  margin: 50rpx auto 0;
}