/**index.wxss**/
@import "template-1.wxss";
@import "template-2.wxss";
.index-header {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 11;
  width: 100%;
  height: 45px;
}
.header-input-container {
  width: 50%;
  height: 25px;
  margin: 10px auto;
  border-radius: 12px;
}
.header-input-container>input {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  font-size: 24rpx;
  padding: 0 16rpx;
}
.index-swiper {
  position: relative;
}
/* 今日头条 */
.index-news {
  width: 100%;
  height: 32px;
  background-color: #fff;
  position: relative;
  border-bottom: 1rpx solid #ccc;
}
.index-logo {
  position: absolute;
  bottom: -15px;
  right: 25px;
  z-index: 10;
  width: 56px;
  height: 56px;
  overflow: hidden;
}
.index-logo>image {
  width: 56px;
  height: 56px;
}
.index-news-tip {
  font-size: 12px;
  color: #555;
  line-height: 12px;
  vertical-align: -3px;
}
.index-news-title {
  display: inline-block;
  height: 32px;
  width: 92px;
  position: absolute;
  left: 0;
  top: 0;
} 
.index-news-title>image {
  width: 72px;
  margin-left: 10px;
  height: 16px;
  margin-top: 8px;
}
/* 公司地址 */
.address-info {
  width: 100%;
  height: 66rpx;
  background-color: #fff;
  position: relative;
  border-bottom: 0rpx solid #ccc;
}
.address-info>text:first-child {
  display: block;
  font-size: 25rpx;
  color: #444;
  font-weight: 600;
  line-height: 30rpx;
  margin-top: 10rpx;
  padding: 0 20rpx;
}
.address-info>text:last-child {
  display: block;
  font-size: 20rpx;
  line-height:20rpx;
  margin-top: 6rpx;
  padding: 0 20rpx;
  color: #555;
}
/* 头部导航 */
.index-nav {
  display: flex;
  flex-direction: row;
  height: 154rpx;
  width: 100%;
  border-bottom: 0rpx solid #e3e3e3;
  border-top: 0rpx solid #e3e3e3;
}
.index-nav-item {
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
  justify-content: center;
}
.index-nav-item>image {
  width: 84rpx;
  height: 84rpx;
}
.index-nav-item>text {
  font-size: 24rpx;
  margin-top: 4rpx;
  color: #555;
}

